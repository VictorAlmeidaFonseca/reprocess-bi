FROM node:14-alpine

ENV ELASTIC_HOST=http://localhost
ENV ELASTIC_PORT=9200
ENV NODE_PORT=3001

ENV MONGO_URI=''
ENV MONGO_DB=''
ENV MONGO_COLLECTION=''
ENV START_DATE=''
ENV END_DATE=''
ENV VTEX_TOKEN=''
ENV VTEX_KEY=''
ENV VTEX_ACCOUNTNAME=''

WORKDIR /usr/src/app

COPY package*.json ./

RUN npm install

COPY . .

EXPOSE 3001

RUN printenv

CMD ["node", "server.js" ]